{
    "type": "object",
    "title": "Track schema",
    "$schema": "http://json-schema.org/draft-03/schema",
    "properties": {
        "id": {
            "required": true,
            "type": "id_field",
            "args": {
                "primary_key": true
            }
        },
        "name": {
            "required": true,
            "type": "string"
        },
        "description": {
            "required": false,
            "type": "text"
        },
        "events": {
            "required": false,
            "type": "relationship",
            "args": {
                "document": "Event",
                "ondelete": "NULLIFY",
                "backref_name": "track",
                "backref_ondelete": "NULLIFY"
            }
        }
    }
}
